<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:padding="10dp" android:layout_weight="1">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_numbers" android:text="0" android:gravity="top|right" android:paddingTop="80dp"
            android:background="@color/gray" android:textSize="30sp" android:textColor="@android:color/white"
            android:layout_weight="1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="70dp"
                  android:gravity="center">
            <Button
                    android:text="AC"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="+/-"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button2" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="%"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button3" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button7" android:background="@color/orange"
                    android:layout_margin="1dp" android:textColor="@android:color/white" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="7"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button8" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="8"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button9" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="9"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button10" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="*"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button11" android:background="@color/orange"
                    android:layout_margin="1dp" android:textColor="@android:color/white" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="4"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button13" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="5"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button12" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="6"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button14" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="-"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button15" android:background="@color/orange"
                    android:layout_margin="1dp" android:textColor="@android:color/white" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:text="1"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button16" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="2"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button17" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="3"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button18" android:background="@color/lightButton"
                    android:layout_margin="1dp" android:textSize="18sp" android:layout_weight="1"/>
            <Button
                    android:text="+"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button19" android:background="@color/orange"
                    android:layout_margin="1dp" android:textColor="@android:color/white" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:text="0"
                android:layout_width="160dp"
                android:layout_height="70dp" android:id="@+id/button4"
                android:background="@color/lightButton" android:layout_margin="1dp" android:textSize="18sp"
                android:layout_weight="1"/>
        <Button
                android:text=","
                android:layout_width="96dp"
                android:layout_height="70dp" android:id="@+id/button5"
                android:background="@color/lightButton" android:layout_margin="1dp" android:textSize="18sp"
                android:layout_weight="0"/>
        <Button
                android:text="="
                android:layout_width="96dp"
                android:layout_height="70dp" android:id="@+id/button6"
                android:background="@color/orange" android:layout_margin="1dp"
                android:textColor="@android:color/white" android:textSize="18sp" android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>